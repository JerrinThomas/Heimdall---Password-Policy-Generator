<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/style4pass_man.css">
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body class="clr">

    <div class="row">
        <div class="col s12 l4 offset-l4 bodyusr" id="bodycontents">
            <div class="input-field kpmrg">
                <input id="username" type="text" class="validate" style="color: white;">
                <label for="username">Username</label>
            </div>
            <p class="center-align">
                <button class="btn waves-effect waves-light" id="go">
                    <i class="material-icons right">search</i>Search My Username
                </button>
            </p>
        </div>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>

    <script src="js/jq.js"></script>
    <script>
        $("#go").click(function () {
            var value = $("#username").val()
            $.post("forgot", {
                    username: value
                },
                function (data) {
                    $("#bodycontents").empty().append(data);
                });
        });

        function otpgo() {
            var otp = $("#otp").val()
            $.post("forgot_try", {
                    otp: otp
                },
                function (data2) {
                    $("#bodycontents").empty().append(data2);
                });
        }
    </script>
</body>

</html>